{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NotificationRequestMessage",
  "description": "The message payload published to RabbitMQ. This schema applies to BOTH email.queue and push.queue.",
  "type": "object",
  "properties": {
    "notification_type": {
      "type": "string",
      "enum": ["email", "push"]
    },
    "user_id": {
      "type": "string",
      "format": "uuid"
    },
    "template_code": {
      "type": "string"
    },
    "variables": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "link": {
          "type": "string",
          "format": "uri"
        },
        "meta": {
          "type": "object",
          "nullable": true
        }
      },
      "required": ["name", "link"]
    },
    "request_id": {
      "type": "string"
    },
    "priority": {
      "type": "integer"
    },
    "metadata": {
      "type": "object",
      "nullable": true
    }
  },
  "required": [
    "notification_type",
    "user_id",
    "template_code",
    "variables",
    "request_id",
    "priority"
  ]
}
